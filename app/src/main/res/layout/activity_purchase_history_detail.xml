<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.menu.purchaseHistory.purchaseHistoryDetail">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/aphd_Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="구매 상세내역"
                android:textAlignment="center"
                android:textSize="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="결제 수단"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=""
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/pay_method"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:text="결제 금액"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="10dp"
            android:id="@+id/pay_value"
            android:textSize="20dp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="원"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="결제 완료"
        android:id="@+id/pay_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp" />
    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/pay_date"
        android:text="2020/06/29 11:23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="거래번호"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="3"
            android:id="@+id/pay_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <TableLayout
        android:background="#000000"
        android:padding="2dp"
        android:stretchColumns="*"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="#FFFFFF"
            >
            <TextView
                android:textAlignment="center"
                android:layout_width="100dp"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:text="상품명"/>
            <TextView
                android:layout_width="180dp"
                android:layout_margin="2dp"
                android:textSize="20dp"
                android:text="수량"/>
            <TextView
                android:layout_margin="2dp"
                android:layout_width="40dp"
                android:textSize="20dp"
                android:text="가격"/>
        </TableRow>
    </TableLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>





</LinearLayout>