<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_sto_img"
        android:padding="4dp"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="12dp">
        <!--[{"STO_IMG":"http://192.168.0.37:8000/pjBasket/store/image/geumcheonGS25.jpg",
        "STO_TIME":"09:00~22:00","STO_NAME":"GS25 금천우림점",
        "STO_ADDR":"서울특별시 금천구 가산동 371-28",
        "STO_TEL":"02-2026-4276"}]-->
        <!--STO_CODE, STO_NAME, STO_TEL, STO_ADDR, STO_IMG, LNG, LAT, STO_UUID, STO_MAJOR,STO_TIME-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tv_sto_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:text="" />

                <TextView
                    android:id="@+id/tv_sto_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_sto_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="" />

            <TextView
                android:id="@+id/tv_sto_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <Button
                android:id="@+id/btn_dialog_finish"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_color"
                android:text=""
                android:textColor="@color/white"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_attention_indifference"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/main_color"
                android:text="관심"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>